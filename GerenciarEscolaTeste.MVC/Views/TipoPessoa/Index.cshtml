@model IEnumerable<GerenciarEscolaTeste.Application.ViewModels.TipoPessoaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>:: Listagem: Tipo de Pessoa ::</h2>
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <div class="btn-toolbar pull-right">
                <a class="btn btn-primary btn-sm inserir-TipoPessoa" href="@Url.Action("Create","TipoPessoa")">
                    Incluir
                </a>
            </div>
            <div class="clear"></div>
            <hr class="divisaoBtnTop">
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="form-group">
            <table class="table">
                <tr>
                    <th class="w10 text-center">
                        Código
                    </th>
                    <th>
                        Descrição
                    </th>
                    <th class="w10 text-center">Ações</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="w10 text-center">
                            @Html.DisplayFor(modelItem => item.TipoPessoaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="w10 text-center">
                            <a class="botaoDetalhar" href="@Url.Action("Details", "TipoPessoa", new {id = @item.TipoPessoaId})"><span class="glyphicon glyphicon-zoom-in detalhar-TipoPessoa" data-toggle="tooltip" data-placement="top" title="Detalhar"></span></a>
                            |
                            <a class="botaoEditar" href="@Url.Action("Edit", "TipoPessoa", new {id = @item.TipoPessoaId})"><span class="glyphicon glyphicon-edit editar-TipoPessoa" data-toggle="tooltip" data-placement="top" title="Editar"></span></a>
                            |
                            <a href="#" data-toggle="modal" data-target="#excluirCategoria" class="botaoExcluir"><span class="glyphicon glyphicon-trash excluirTipoPessoa" data-id="@item.TipoPessoaId" data-toggle="tooltip" data-placement="top" title="Excluir"></span></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>